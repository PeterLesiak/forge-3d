{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "noEmit": true,
        "esModuleInterop": true,

        "checkJs": true,
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "verbatimModuleSyntax": true,
        "composite": true,

        "strict": true,
        "isolatedModules": true
    }
}
